{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",

    /* Aliasing */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
